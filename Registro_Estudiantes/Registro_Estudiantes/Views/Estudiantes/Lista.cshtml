@model IEnumerable<Registro_Estudiantes.Models.EstudiantesViewModels>

@{
    ViewData["Title"] = "Lista de Estudiantes";
}
<style>
    body {
        background-color: #ADD8E6; /* Fondo azul claro */
    }

    .lista-container {
        background-color: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        max-width: 95%;
        margin: 40px auto;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .btn-primary {
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: #007BFF;
        color: white;
        text-align: center;
    }

    td, th {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .acciones a {
        margin: 0 3px;
    }
</style>

<div class="lista-container">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Index" class="btn btn-primary">Registrar Nuevo Estudiante</a>
    </p>
    <table class="table table-striped table-hover">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.carrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstaBecado) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorcentajeBeca)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>



    <tbody>
        @foreach (var estudiante in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Matricula) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.carrera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Telefono)
                </td>
                <td>
                    @estudiante.Edad.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Turno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.TipoIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.EstaBecado) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.PorcentajeBeca)
                </td>
                    <td class="acciones">
                        <a asp-action="Editar" asp-route-matricula="@estudiante.Matricula" class="btn btn-sm btn-info">Editar</a>
                        <a asp-action="Eliminar" asp-route-matricula="@estudiante.Matricula" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar a este estudiante?');">Eliminar</a>
                    </td>

            </tr>
        }
    </tbody>
</table>
</div>
