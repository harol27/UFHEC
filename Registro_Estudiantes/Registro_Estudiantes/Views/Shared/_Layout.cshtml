<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Registro de Estudiantes</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
       
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1; 
            padding: 20px;
        }

        footer {
            background-color: #f0f0f0;
            text-align: center;
            padding: 10px;
        }
    </style>
</head>
<body>
    <header>
        <h1>Registro de Estudiantes</h1>
        <nav>
            <a href="@Url.Action("Index", "Estudiantes")">Registrar</a> |
            <a href="@Url.Action("Lista", "Estudiantes")">Lista</a>
        </nav>
    </header>

    <div class="content">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>

    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - Proyecto Harold</p>
    </footer>
</body>
</html>
